<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Gestion des utilisateurs</title>
  <style>
    body { font-family: sans-serif; padding: 2rem; }
    table { width: 100%; border-collapse: collapse; margin-top: 2rem; }
    th, td { padding: 0.75rem; border-bottom: 1px solid #ddd; }
    th { background: #f0f0f0; }
    .btn-delete {
      background: #e63946; color: white; padding: 0.3rem 0.6rem; border: none; border-radius: 4px;
    }
  </style>
</head>
<body>
  <h1>Liste des utilisateurs</h1>
  <a href="/dashboard">⬅ Retour au Dashboard</a>

  <table>
    <thead>
      <tr>
        <th>Nom</th>
        <th>Email</th>
        <th>Rôle</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(u => { %>
        <tr>
          <td><%= u.nom %></td>
          <td><%= u.email %></td>
          <td><%= u.role %></td>
          <td>
            <% if (u.role !== 'admin') { %>
              <form action="/admin/users/delete/<%= u._id %>" method="POST" onsubmit="return confirm('Supprimer cet utilisateur ?')">
                <button class="btn-delete" type="submit">Supprimer</button>
              </form>
            <% } else { %>
              <em>(Admin)</em>
            <% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
